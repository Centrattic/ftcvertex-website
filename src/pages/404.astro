---
import Layout from '../layouts/Layout.astro';
import mainLogo from "/logo.svg";
import lion from "/lion.svg";
import logoWithText from "/logoWithText.svg";
import instagram from "/instagram.svg";
import "animate.css";
---

<Layout title="FTC VERTEX 15534">
    <div class="flex justify-center min-h-screen w-screen py-32">
        <div class="-z-10 opacity-90 absolute w-1/3 h-1/3 bg-gradient-to-tr from-rose-400 to-red-600 rounded-full funkyRadius blur-[60px] animate-spin-slow"></div>
        <div class="w-1/2">
            <h1 class="font-hype text-9xl text-center animate__animated animate__shakeX pb-8">4 0 4</h1>
            <h1 class="font-display text-1xl font-bold text-center pb-8">Uh, oh.<br>Unfortunately, we couldn't locate the page you were looking for.<br>(Perhaps the robot messed up the wiring)</h1>
            <div class="hover:scale-105 duration-200">
                <a href="/">
                    <h1 class="font-display text-2xl font-bold text-center underline underline-offset-2">Go to the main page</h1>
                </a>
            </div>
        </div>
    </div>
</Layout>